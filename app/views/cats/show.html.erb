<h1> <%= @cat.name %> </h1>
<hr />

<% if @cat.picture? %>
  <%= cl_image_tag(@cat.picture.path, { size: '250x250', crop: :fit }) %>
<% end %>

<p> <%= @cat.age %> </p>
<p> <%= @cat.gender %> </p>
<p> <%= @cat.fur_color %> </p>

<%= link_to 'Edit', edit_cat_path(@cat) %>
<%= link_to 'Delete', cat_path(@cat) %>
<hr />
<%= link_to 'All Cats', cats_path %>
